                app:popExitAnim="@anim/slide_out_right" app:popUpTo="@+id/home_dest"/>
    </fragment>

    <fragment
        android:id="@+id/flow_step_two_dest"
        android:name="fgsystem.franol.axumfoodreservation_sy.Main_Page"
