<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".FoodMenu">

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                           android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="167dp"
                                       android:layout_height="239dp"


                                       android:id="@+id/launchMenu"
                                       android:elevation="6dp"
                                       app:cardBackgroundColor="#fff"
                                       app:cardCornerRadius="10dp"
                                       app:cardElevation="6dp"
                                       app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginLeft="16dp"
                                       android:layout_marginStart="16dp"
                                       android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:id="@+id/aaa"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:padding="5dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/photo4"/>
        <TextView
                android:text="@string/Launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:layout_marginTop="200dp"
                android:textSize="18sp"
                android:padding="8dp"

        />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="167dp"
                                       android:layout_height="239dp"

                                       android:elevation="6dp"
                                       app:cardBackgroundColor="#fff"
                                       app:cardCornerRadius="10dp"

                                       app:cardElevation="6dp"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                                       app:layout_constraintStart_toEndOf="@+id/launchMenu"
                                       android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                                       android:id="@+id/cardView" app:layout_constraintHorizontal_bias="0.444"
                                       android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:id="@+id/bbb"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:padding="5dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/photo8"/>
        <TextView
                android:text="@string/break_fast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:layout_marginTop="200dp"
                android:textSize="18sp"
                android:padding="8dp"

        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="167dp"
                                       android:layout_height="239dp"

                                       android:elevation="6dp"
                                       app:cardBackgroundColor="#fff"
                                       app:cardCornerRadius="10dp"

                                       app:cardElevation="6dp"
                                       android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginLeft="16dp" android:layout_marginTop="44dp"
                                       app:layout_constraintTop_toBottomOf="@+id/launchMenu">


        <ImageView
                android:id="@+id/ccc"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:padding="5dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/photo14"/>
        <TextView
                android:text="@string/dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8"
                android:layout_marginTop="200dp"
                android:textSize="18sp"
                android:padding="8dp"></TextView>
    </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

