<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
            android:layout_width="154dp"
            android:layout_height="18dp"
            android:id="@+id/nameoffood" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textSize="30dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/priceoffood"
            android:textColor="@android:color/holo_purple"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toEndOf="@+id/nameoffood"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <TextView
            android:text="1"
            android:layout_width="29dp"
            android:layout_height="24dp"
            android:id="@+id/textView24"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/priceoffood"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <Button
            android:text="@string/sub"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/textView24"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:id="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/priceoffood" android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
